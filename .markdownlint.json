{
  "$schema": "https://raw.githubusercontent.com/DavidAnson/markdownlint/main/schema/markdownlint-config-schema.json",
  "default": true,
  "MD007": {
    "indent": 2,
    "start_indented": false
  },
  "MD013": {
    "line_length": 500,
    "code_blocks": false,
    "tables": false,
    "headings": false
  },
  "MD022": false,
  "MD052": false,
  "MD053": false,
  "MD024": {
    "siblings_only": true
  },
  "MD025": false,
  "MD033": {
    "allowed_elements": [
      "T",
      "string",
      "int",
      "bool",
      "object",
      "TSource",
      "TDestination",
      "br",
      "details",
      "summary"
    ]
  },
  "MD032": false,
  "MD036": false,
  "MD040": false,
  "MD041": false
}
